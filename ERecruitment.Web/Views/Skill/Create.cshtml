@{
    ViewBag.Title = "Create Skill";
}
<div class="row" ng-controller="SkillController">
    <div class="col-lg-6 well bs-component">
        <form class="form-horizontal">
            <fieldset>
                <legend>Skill Info</legend>
                <div class="form-group">
                    <label for="SkillName" class="col-lg-4 control-label">Skill Name</label>
                    <div class="col-lg-8">
                        <input type="text" class="form-control" id="SkillName" placeholder="Skill Name" ng-model="inputSkillName">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-8 col-lg-offset-4">
                        <button class="btn btn-primary" ng-click="SaveSkillInfo()">Save</button>
                    </div>
                </div>

                <br/>
                @Html.ActionLink("Back to Skill list", "Index")
            </fieldset>
        </form>
    </div>
</div>

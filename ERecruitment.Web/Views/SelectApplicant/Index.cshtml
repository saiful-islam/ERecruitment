@{
    ViewBag.Title = "Select Applicant";
}

<div ng-controller="SelectApplicantController">
    <br />
    <div class="row">
        <div class="form-group">
            <label for="ddlExamType" class="col-lg-2 control-label">Select Exam Type</label>
            <div class="col-lg-10">
                <select ng-model="SelectedExamTypeID" class="form-control" id="ddlExamType"
                        ng-options="type.ExamTypeID as type.ExamType for type in examTypes" ng-change="ChangeExamType()"></select>
            </div>
        </div>
        <div class="form-group">
            <label for="ddlJob" class="col-lg-2 control-label">Select Exam</label>
            <div class="col-lg-10">
                <select ng-model="selectedJobId" class="form-control" id="ddlJob"
                        ng-options="job.JobID as job.JobName for job in jobs" ng-change="ChangeJob()"></select>
            </div>
        </div>
        <div class="form-group">
            <label for="dtExamDate" class="col-lg-2 control-label">Exam Date</label>
            <div class="col-lg-10">
                    <div class="col-lg-8">
                        <input type="text" class="form-control date-picker" id="dtExamDate" placeholder="Exam Date" ng-model="inputExamDate" required>
                    </div>
            </div>
        </div>
    </div>
    <div>
        <h2>Applicant List</h2>
        <table id="tblApplicantList" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    MobileNo
                </th>
                <th>
                    Email
                </th>
                <th>
                    Address
                </th>
                <th>
                    Status
                </th>
                <th>
                    Expertise
                </th>
                <th>Experiance</th>
                <th></th>
            </tr>
            <tr ng-repeat="applicant in applicantList">
                <td>{{ applicant.FirstName +" "+ applicant.LastName }}</td>
                <td>{{ applicant.MobileNo }}</td>
                <td>{{ applicant.Email }}</td>
                <td>{{ applicant.MailingAddress }}</td>
                <td>{{ applicant.Status}}</td>
                <td>{{ applicant.ExpertiseName }}</td>
                <td>{{ applicant.Experiance/365 | number:2 }}</td>
                <td>
                    <input type="checkbox" ng-model="applicant.IsSelected">
                </td>
            </tr>
        </table>
    </div>
    <button class="btn btn-primary btn-xs" ng-show="inputExamDate && SelectedExamTypeID && selectedJobId" ng-click="SubmitApplicantList(applicantList)">Submit</button>
</div>

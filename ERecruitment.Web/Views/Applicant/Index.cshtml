@{
    ViewBag.Title = "Applicant";
}
<div ng-controller="ApplicantController">
    <div ng-show="showApplicantList">
        <button class="btn btn-link" ng-click="CreateApplicant()">Create New Applicant</button>
        <h2>Applicant List</h2>
        <table id="tblApplicantList" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <tr>
                <th>Name
                </th>
                <th>MobileNo
                </th>
                <th>Email
                </th>
                <th>Address
                </th>
                <th>Status 
                </th>
                <th>Expertise
                </th>
                <th></th>
            </tr>
            <tr ng-repeat="applicant in applicantList">
                <td>{{ applicant.FirstName +" "+ applicant.LastName }}</td>
                <td>{{ applicant.MobileNo }}</td>
                <td>{{ applicant.Email }}</td>
                <td>{{ applicant.MailingAddress }}</td>
                <td>{{ applicant.Status}}</td>
                <td>{{ applicant.ExpertiseName }}</td>
                <td>
                    <button class="btn btn-primary btn-xs" ng-click="EditApplicantInfo(applicant.ApplicantID)">Edit</button>
                    <button class="btn btn-danger btn-xs" ng-click="DeleteApplicantInfo(applicant.ApplicantID)">Delete</button>
                </td>
            </tr>
        </table>
    </div>
    <div ng-show="showCreateApplicant">
        @Html.Partial("_Create")
    </div>
</div>


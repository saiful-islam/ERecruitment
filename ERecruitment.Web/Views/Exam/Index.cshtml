@{
    ViewBag.Title = "Exam Result";
}

<div ng-controller="ExamController">
    <br />
    <div class="row">
        <div class="form-group">
            <label for="ddlExamType" class="col-lg-2 control-label">Select Exam Type</label>
            <div class="col-lg-10">
                <select ng-model="SelectedExamTypeID" class="form-control" id="ddlExamType"
                        ng-options="type.ExamTypeID as type.ExamType for type in examTypes" ng-change="ChangeExamType()"></select>
            </div>
        </div>
        <div class="form-group">
            <label for="ddlJob" class="col-lg-2 control-label">Select Exam</label>
            <div class="col-lg-10">
                <select ng-model="selectedJobId" class="form-control" id="ddlJob"
                        ng-options="job.JobID as job.JobName for job in jobs" ng-change="ChangeJob()"></select>
            </div>
        </div>
    </div>
    <div>
        <h2>Applicant List</h2>
        <table id="tblApplicantList" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    MobileNo
                </th>
                <th>
                    Email
                </th>
                <th>
                    Marks
                </th>
                <th>Is Rejected ?</th>
                <th>Is Passed ?</th>
            </tr>
            <tr ng-repeat="applicant in applicantList">
                <td>{{ applicant.FirstName +" "+ applicant.LastName }}</td>
                <td>{{ applicant.MobileNo }}</td>
                <td>{{ applicant.Email }}</td>
                <td><input type="checkbox" ng-model="applicant.Marks"></td>
                <td>
                    <input type="checkbox" ng-model="applicant.IsRejected">
                </td>
                <td>
                    <input type="checkbox" ng-model="applicant.IsPassed">
                </td>
            </tr>
        </table>
    </div>
    <button class="btn btn-primary btn-xs" ng-show="SelectedExamTypeID && selectedJobId" ng-click="SaveExam(applicantList)">Save</button>
    <button class="btn btn-primary btn-xs" ng-show="SelectedExamTypeID && selectedJobId" ng-click="CompleteExam(applicantList)">Complete</button>
</div>

@{
    ViewBag.Title = "Exam Result";
}

<div ng-controller="ExamController">
    <br />
    <div class="row">
        <div class="form-group">
            <label for="lblExamType" class="col-lg-2 control-label">Select Exam Type</label>
            <div class="col-lg-10">
                <label id="lblExamType">{{ examInfoes.examType }}</label>
            </div>
        </div>
        <div class="form-group">
            <label for="lblJobName" class="col-lg-2 control-label">Job</label>
            <div class="col-lg-10">
                <label id="lblJobName">{{ examInfoes.jobname }}</label>
            </div>
        </div>
    </div>
    <div>
        <h2>Applicant List</h2>
        <table id="tblApplicantList" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    MobileNo
                </th>
                <th>
                    Email
                </th>
                <th>
                    Marks
                </th>
                <th>Is Rejected ?</th>
                <th>Is Passed ?</th>
            </tr>
            <tr ng-repeat="applicant in examInfoes.applicantList">
                <td>{{ applicant.FirstName +" "+ applicant.LastName }}</td>
                <td>{{ applicant.MobileNo }}</td>
                <td>{{ applicant.Email }}</td>
                <td><input type="number" ng-model="applicant.Marks"></td>
                <td>
                    <input type="checkbox" ng-disabled="applicant.IsPassed" ng-model="applicant.IsRejected">
                </td>
                <td>
                    <input type="checkbox" ng-disabled="applicant.IsRejected" ng-model="applicant.IsPassed">
                </td>
            </tr>
        </table>
    </div>
    <button class="btn btn-primary btn-xs" ng-click="SaveExam(examInfoes.applicantList, false)">Save</button>
    <button class="btn btn-primary btn-xs" ng-click="SaveExam(examInfoes.applicantList, true)">Complete</button>
</div>
